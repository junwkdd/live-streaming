<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <style>.videoPlayer { max-width: 1280px; max-height: 720px; width: 1280px; height: 720px; }</style>
</head>
<body style="overflow-x:hidden" class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-white bg-white shadow-sm fixed-top">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Dropdown
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <div class="mx-5 mt-5 ml-5">
        <div class="row ml-5">
            <div class="videoPlayerContainer mt-5">
                <video id="video" class="videoPlayer" controls autoplay></video>

                <div class="mt-3 mb-2">
                    <h3><%= video.title %></h3>
                </div>
                
                <div class="text-secondary">
                    <span class="">조회수 <%= video.view %>회</span>
                    <span class="ml-3"><%= video.date %>회</span>
                    <span style="cursor: default; user-select: none;">
                        <span class="float-right h5 hate"><i class="fas fa-thumbs-down mr-2"></i><span class="hateCnt"><%= video.hate %></span></span>
                        <span class="float-right mr-4 h5 like"><i class="fas fa-thumbs-up mr-2"></i><span class="likeCnt"><%= video.like %></span></span>
                    </span>
                    <hr>
                </div>
                
                <div>
                    <span class="d-block h5"><%= video.nickname %></span>
                    <span class="text-secondary"><%= video.description %></span>
                    <hr>
                </div>

                <div>
                    <div class="mb-3">댓글</div>
                    <div class="input-group">
                        <input type="text" class="form-control" name="id" id="id">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">Go</button>
                        </div>
                    </div>
                </div>
                
            </div>
    
            <div class="col-md-2">
    
            </div>
        </div>    
        
        
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/hls.js@latest/dist/hls.js"></script>
    
    <!-- hls video player-->
    <script>
        if(Hls.isSupported()) {
            let video = $("#video")[0];
            let videoSrc = "../<%= video.path %>.m3u8";
            let hls = new Hls({ debug: true });
            hls.loadSource(videoSrc);
            hls.attachMedia(video);
            hls.on(Hls.Events.MEDIA_ATTACHED, function() { 
                video.play();
            });
        } else if (video.canPlayType('application/vnd.apple.mpegurl')) {
            video.attr("src", videoSrc);
            video.addEventListener('canplay',function() { video.play() });
        }
    </script>

    <!-- videoPlayer resize -->
    <script src="../javascript/videoPlayerResize.js"></script>

    <!-- like unlike -->
    <script>
        likeUp = () => {
            $('.fa-thumbs-up').css('color', '#0275d8');
            $.ajax({
                url: 'http://localhost:3000/videos/like?videoID=<%= video._id %>',
                type: 'POST',
                data: { videoID: '<%= video._id %>' },
                success: (likeCnt) => {
                $('.likeCnt').html(likeCnt);
                },
            });
        };
        likeDown = () => {
            $('.fa-thumbs-up').css('color', '#6c757d');
            $.ajax({
                url: 'http://localhost:3000/videos/like?videoID=<%= video._id %>',
                type: 'DELETE',
                success: (likeCnt) => {
                $('.likeCnt').html(likeCnt);
                },
            });
        };
        hateUp = () => {
            $('.fa-thumbs-down').css('color', '#0275d8');
            $.ajax({
                url: 'http://localhost:3000/videos/hate?videoID=<%= video._id %>',
                type: 'POST',
                success: (hateCnt) => {
                $('.hateCnt').html(hateCnt);
                },
            });
        };
        hateDown = () => {
            $('.fa-thumbs-down').css('color', '#6c757d');
            $.ajax({
                url: 'http://localhost:3000/videos/hate?videoID=<%= video._id %>',
                type: 'DELETE',
                success: (hateCnt) => {
                $('.hateCnt').html(hateCnt);
                },
            });
        };

        $('.like').on('click', () => {
        if ($('.fa-thumbs-up').css('color') === 'rgb(108, 117, 125)') {
            likeUp();
            if ($('.fa-thumbs-down').css('color') === 'rgb(2, 117, 216)') hateDown();
        } else likeDown();
        });

        $('.hate').on('click', () => {
        if ($('.fa-thumbs-down').css('color') === 'rgb(108, 117, 125)') {
            hateUp();
            if ($('.fa-thumbs-up').css('color') === 'rgb(2, 117, 216)') likeDown();
        } else hateDown();
        });
    </script>
</body>
</html>